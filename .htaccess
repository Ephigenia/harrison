# this .htaccess file will silently redirect users to the html folder
# where additional rewrite actions happen
# ----------------------------------------------------------------------------
RewriteEngine On
# Sometimes RewriteBase is needed to set correct document root to /
RewriteRule ^$			public/		[QSA,L]

# rewriteconditions for directory & file access
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-s
RewriteCond %{REQUEST_FILENAME} !-l
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$	public/$0	[QSA,L]