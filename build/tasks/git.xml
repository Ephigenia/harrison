<project>
	<target name="git.log" description="list last git commit messages pretty formatted">
		<property name="git.log.time" value="1 day ago" />
		<if>
			<not><isset property="git.log.username" /></not>
			<then>
				<input propertyname="git.log.username" promptchar=":">Enter git user name</input>
			</then>
		</if>
		<exec escape="false" passthru="true" command="git log --author=${git.log.username} --since='${git.log.time}' --pretty=format:%B --date-order --reverse | grep --invert-match --regexp=Merge --regexp=^$" />
	</target>
	<target name="git.users" description="list all users working on this project">
		<exec escape="false" passthru="true" command="git log --format='%aN' | sort -u" />
	</target>
</project>